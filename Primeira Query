SELECT
  TBL1.*
  ,TBL2.CD_OPERACAO
  ,TBL2.DS_OPERACAO
  ,TBL2.TP_QUEBRA
  ,TBL2.CD_MOTIVO_QUEBRA
  ,TBL2.DS_MOTIVO_QUEBRA
  ,TBL3.FORMATO
  ,TBL3.CD_SETOR
  ,TBL3.DESC_SETOR
  ,TBL3.CD_DEPARTAMENTO
  ,TBL3.DESC_DEPARTAMENTO
  ,TBL3.CD_PORTFOLIO
  ,TBL3.DESC_PORTIFOLIO
  ,TBL3.CD_SECAO
  ,TBL3.DESC_SECAO
  ,TBL3.CD_LINHA
  ,TBL3.DESC_LINHA
  ,TBL3.CD_SUBLINHA
  ,TBL3.DESC_SUBLINHA
  ,TBL3.MARCA_PROPRIA
  ,TBL3.UPC
  ,TBL3.DESC_PRODUTO
  ,TBL4.NOME_FORNECEDOR
  ,TBL4.FORMATO AS ATACADO_VAREJO
  ,TBL4.ESTADO
  ,TBL5.NOME_LOJA
FROM
  db_dolphin_analyticshub_big.TBL_DSH004_QUEBRA_VENDA AS TBL1
JOIN
  db_dolphin_analyticshub_big.TBL_DSH004_OPERACAO_HIST AS TBL2
ON
  TBL1.ORIGEM = TBL2.ORIGEM
  AND TBL1.CD_LOJA = TBL2.CD_LOJA
  AND TBL1.CD_PRODUTO = TBL2.CD_PRODUTO
  AND TBL1.DT_EVENTO = TBL2.DT_EVENTO
JOIN
  br-apps-dolphin-ddp-prd.db_dolphin_stage_catalog.tbl_produtos_big AS TBL3
ON
  TBL1.CD_PRODUTO = TBL3.CD_PRODUTO
JOIN
  br-apps-dolphin-ddp-prd.db_dolphin_stage_catalog.tbl_fornecedores_big AS TBL4
ON
  TBL1.CD_FORNECEDOR = TBL4.COD_FORNECEDOR
JOIN
  br-apps-dolphin-ddp-prd.db_dolphin_analyticshub_big.VW_TBL_BI_STORE AS TBL5
ON
  TBL1.CD_LOJA = TBL5.CD_LOJA
WHERE
TBL3.FORMATO = 'SAMS CLUB'
